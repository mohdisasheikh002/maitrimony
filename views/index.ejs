<%- include('./partials/header')%>
<!--  -->
<div class="wrapper min-h-screen w-full bg-[#800000] overflow-x-hidden">
  <div
    class="sec1 slideHolder relative h-[80vh] w-[100%] bg-[#800000] max-sm:h-[40vh]"
  >
    <div class="imgbox1 absolute top-0 left-0 z-[3] h-full w-full">
      <img
        src="/images/phere.jpeg"
        alt=""
        class="h-full w-full object-cover object-center"
      />
    </div>
    <div class="imgbox2 absolute top-0 left-[100%] z-[2] h-full w-full">
      <img
        src="/images/rasam1.jpeg"
        alt=""
        class="h-full w-full object-cover object-center"
      />
    </div>
    <div class="imgbox3 absolute top-0 left-[100%] z-[1] h-full w-full">
      <img
        src="/images/rasam2.jpeg"
        alt=""
        class="h-full w-full object-cover object-center"
      />
    </div>
  </div>
  <div class="sec2 h-screen w-full">
    <div
      class="holder formHolder relative h-screen w-full flex flex-col items-center justify-center mt-[-15vmax] max-sm:p-[2.5vmax]"
    >
      <div
        class="text-center bg-white p-[2.5vmax] pt-[3.5vmax] pb-[3.5vmax] rounded-md z-10 max-sm:p-[2.5vmax] max-sm:w-full max-sm:pt-[2vmax] max-sm:pb-[3.5vmax]"
      >
        <h1
          class="text-[2vmax] text-white text-center tracking-tight py-[.5vmax] rounded-md max-sm:text-[3vmax] bg-[#800000]"
        >
          Register for free
        </h1>
        <form action="/user/login" method="post">
          <input
            type="text"
            name="name"
            placeholder="Full name"
            required
            class="usernameInput block p-[.8vmax] w-[25vmax] outline-none mt-[2vmax] rounded-md placeholder:text-black border-2 border-black bo max-sm:w-full max-sm:py-[1.5vmax] max-sm:px-[1.3vmax] max-sm:mt-[2vmax] max-sm:text-[2vmax]"
          />
          <div class="mt-[1vmax] max-sm:mt-[2vmax]">
            <div class="flex gap-[1.5vmax] mt-1 max-sm:gap-[2.5vmax]">
              <div class="radiobox flex gap-[.4vmax] max-sm:gap-[.6vmax]">
                <input
                  type="radio"
                  id="male"
                  name="gender"
                  value="Male"
                  class=""
                  required
                /><label class="max-sm:text-[2vmax]" for="male">Male</label>
              </div>
              <div class="radiobox flex gap-[.4vmax] max-sm:gap-[.6vmax]">
                <input
                  type="radio"
                  id="female"
                  name="gender"
                  value="Female"
                  class=""
                  required
                /><label class="max-sm:text-[2vmax]" for="female">Female</label>
              </div>
            </div>
          </div>
          <input
            type="text"
            name="mobileNumber"
            placeholder="Mobile number"
            required
            class="passwordInput block p-[.8vmax] w-[25vmax] outline-none mt-[1vmax] rounded-md placeholder:text-black border-2 border-black max-sm:w-full max-sm:py-[1.5vmax] max-sm:px-[1.3vmax] max-sm:mt-[1.5vmax] max-sm:text-[2vmax]"
          />
          <button
            type="submit"
            class="block w-[100%] p-[1vmax] mt-[2vmax] bg-blue-600 text-white rounded-md max-sm:p-[1.5vmax] max-sm:mt-[3vmax] max-sm:text-[2vmax]"
          >
            Register now
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.0/gsap.min.js"></script>
<script>
  // Create the timeline for the slide animation
  const tl = gsap.timeline({ repeat: -1 });

  tl.to(".imgbox1", {
    delay: 2,
    duration: 1,
    left: "-100%",
    ease: "power2.inOut",
    onComplete: () => {
      document.querySelector(".imgbox1").style.left = "100%";
    },
  })
    .to(".imgbox2", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=1")
    .to(
      ".imgbox2",
      {
        delay: 2,
        duration: 1,
        left: "-100%",
        ease: "power2.inOut",
      },
      "-=1"
    )
    .to(".imgbox3", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=1")
    .to(
      ".imgbox3",
      {
        delay: 2,
        duration: 1,
        left: "-100%",
        ease: "power2.inOut",
      },
      "-=1"
    )
    .to(
      ".imgbox1",
      {
        duration: 1,
        left: "0%",
        ease: "power2.inOut",
      },
      "-=1"
    );

  // .to(".imgbox1", { duration: 0, left: "100%", ease: "none" }) // Reset imgbox1 for the next loop
  // .to(".imgbox2", { duration: 1, left: "-100%", ease: "power2.inOut" })
  // .to(".imgbox3", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=0.5")
  // .to(".imgbox1", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=0.5")
  // .to(".imgbox2", { duration: 0, left: "100%", ease: "none" }) // Reset imgbox2 for the next loop
  // .to(".imgbox3", { duration: 1, left: "-100%", ease: "power2.inOut" })
  // .to(".imgbox1", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=0.5")
  // .to(".imgbox2", { duration: 1, left: "0%", ease: "power2.inOut" }, "-=0.5")
  // .to(".imgbox3", { duration: 0, left: "100%", ease: "none" }); // Reset imgbox3 for the next loop
</script>
